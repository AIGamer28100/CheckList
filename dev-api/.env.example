# =============================================
# CheckList API Server Configuration
# Copy this file to .env and fill in your actual values
# =============================================

# =============================================
# API SERVER CONFIGURATION
# =============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
DEBUG=true
ENVIRONMENT=development

# Security Configuration
SECRET_KEY=your-super-secret-key-here-minimum-32-characters-long-for-jwt
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================
# FIREBASE/GOOGLE CLOUD CONFIGURATION
# =============================================
# Get these values from Firebase Console > Project Settings > General
# Project from firebase.json: checklist-todo-app-aigamer
GOOGLE_CLOUD_PROJECT=checklist-todo-app-aigamer
FIRESTORE_DATABASE_ID=(default)

# Google Application Credentials (path to service account JSON)
# Download from Firebase Console > Project Settings > Service Accounts
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account-key.json

# =============================================
# GOOGLE OAUTH CONFIGURATION
# =============================================
# Get these from Google Cloud Console > APIs & Services > Credentials
# Create OAuth 2.0 Client ID for Web application
GOOGLE_OAUTH_CLIENT_ID=402421191781-your_actual_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_oauth_client_secret_here
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# =============================================
# EMAIL CONFIGURATION
# =============================================
# Email service provider (sendgrid or smtp)
EMAIL_PROVIDER=sendgrid

# SendGrid Configuration (recommended)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=noreply@checklist-api.com
FROM_NAME=CheckList API

# SMTP Configuration (alternative to SendGrid)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# =============================================
# API KEY CONFIGURATION
# =============================================
API_KEY_LENGTH=32
API_KEY_PREFIX=cla_
API_KEY_DEFAULT_RATE_LIMIT=1000

# OTP Configuration
OTP_LENGTH=6
OTP_EXPIRE_MINUTES=10

# =============================================
# CORS CONFIGURATION
# =============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173
ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================
# RATE LIMITING
# =============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================
# LOGGING CONFIGURATION
# =============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Developer Portal
DEVELOPER_PORTAL_URL=http://localhost:3000
DOCS_URL=http://localhost:8000/docs

# API Key Configuration
API_KEY_PREFIX=ck_
API_KEY_LENGTH=32
DEFAULT_RATE_LIMIT=1000
DEFAULT_QUOTA_MONTHLY=10000